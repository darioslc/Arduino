/*conexionado:
 * VCC->5V
 * GND->GND
 * SCL->A5
 * SCA->A4
 * INT->D2
 */
#include <MPU6050_tockn.h>
#include <Wire.h>

float sumZ, zeta, promedioZ;
int N, z;

MPU6050 mpu6050(Wire);

void setup() {
  Serial.begin(57600);
  Wire.begin();
  mpu6050.begin();
  //para que haga (true) o no el seteado (false)
  mpu6050.calcGyroOffsets(true);
  //setTime(0,00,00.000,30,02,2018);//se setea la hora de inicio del programa, CAMBIARLA
  //pinMode(LED_BUILTIN, OUTPUT);
}

void loop() {
  Serial.println();
  /*time_t t = now();//Declaramos la variable time_t t
  Serial.print(hour(t));
  Serial.print(+ ":") ;
  Serial.print(minute(t));Serial.print(":") ;
  Serial.print(second(t));
  Serial.print(" ; ");*/
  
  //valor de N de las mediciones 
  N=100;
  //mpu6050.update();
  //inicializa las sumatorias, porque sino lo agrega en cada promedio
  sumZ=0;
  //tira N-datos del Ã¡ngulo correspondiente y actualiza el mpu, porque sino queda en el valor fijado
  for (z=0; z<N; z++){
    mpu6050.update();
    zeta=mpu6050.getAngleZ();
    //Serial.println(zeta);
    sumZ=sumZ+zeta;
  }
  //calcula el promedio
  promedioZ=sumZ/N;
  Serial.print("Promedio en Z: ");
  Serial.print(promedioZ);
}
